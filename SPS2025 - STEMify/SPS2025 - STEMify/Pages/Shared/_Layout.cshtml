<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STEMify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SPS2025___STEMify.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="fas fa-atom"></i> STEMify
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Admin/Dashboard">Admin Dashboard</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-outline-primary me-2" href="/Accounts/Login">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </a>
                            <a class="btn btn-primary" href="/Accounts/Register">
                                <i class="fas fa-user-plus"></i> Register
                            </a>
                        }
                        else
                        {
                            <form method="post" asp-page="/Accounts/Logout" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </form>
                            <span class="ms-2">Welcome, @User.Identity.Name!</span>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Admin Login FAB -->
    @if (!User.IsInRole("Admin") && !Context.Request.Path.StartsWithSegments("/Accounts/AdminLog"))
    {
        <div class="admin-login-fab">
            <a href="/Accounts/AdminLog" class="btn btn-danger rounded-circle p-3 shadow" title="Admin Login">
                <i class="fas fa-lock"></i>
            </a>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - STEMify - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        /* Admin FAB */
        .admin-login-fab {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 1000;
        }

            .admin-login-fab .btn {
                width: 56px;
                height: 56px;
                transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            }

                .admin-login-fab .btn:hover {
                    transform: scale(1.1) rotate(10deg);
                    box-shadow: 0 6px 12px rgba(0,0,0,0.3);
                }

        /* Navbar improvements */
        .navbar .btn {
            margin-left: 8px;
            white-space: nowrap;
        }

        .navbar-nav {
            align-items: center;
        }

        /* Footer */
        .footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
        }
    </style>
</body>
</html>6