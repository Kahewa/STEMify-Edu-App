@{

    ViewData["Title"] = "Landing Page";
    
}



<div class="container py-5 text-center">
    <!-- Welcome Section -->
    <div class="mb-5">
        <h1 class="display-4" style="color: green;">Welcome to <strong>STEMify</strong></h1>
        <p class="lead text-muted">Your journey to mastering STEM begins here.</p>
        <a href="/Courses" class="btn btn-success btn-lg mt-3 px-5">Explore Courses</a>
    </div>

    <!-- Features Section -->
    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="p-4 shadow-sm rounded" style="background-color: #e8f5e9;">
                <i class="fa fa-book fa-2x text-success mb-3"></i>
                <h5>Interactive Learning</h5>
                <p class="text-muted">Engage with hands-on activities, quizzes, and practical projects.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4 shadow-sm rounded" style="background-color: #e8f5e9;">
                <i class="fa fa-chart-line fa-2x text-success mb-3"></i>
                <h5>Track Your Progress</h5>
                <p class="text-muted">Monitor your quiz results, time stats, and course completions.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4 shadow-sm rounded" style="background-color: #e8f5e9;">
                <i class="fa fa-users fa-2x text-success mb-3"></i>
                <h5>Community Support</h5>
                <p class="text-muted">Connect with peers, join discussions, and grow together.</p>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="mt-5">
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success mt-3">Join Now</a>
</div>
