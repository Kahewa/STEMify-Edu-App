@page
@model STEMify.Views.Home.DashboardModel
@{
    var QuizzesCompleted = ViewBag.QuizzesCompleted;
    var TotalQuizzes = ViewBag.TotalQuizzes;
    var QuizzesAttempted = ViewBag.QuizzesAttempted;
    var Courses = ViewBag.Courses;


    //ViewBag.TotalQuizzes = totalQuizzes;
    //ViewBag.QuizzesCompleted = totalAnswers;
    //ViewBag.QuizzesAttempted = quizzesAttempted;
}
<style>
    .chart-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.85);
        color: #4CAF50;
        font-weight: bold;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 5;
        border-radius: 10px;
        pointer-events: none;
    }
</style>

<div class="container mt-5">
    <!-- User Info Section -->
    <div class="card shadow-sm border-0 mb-4" style="border-radius: 15px; overflow: hidden;">
        <div class="card-body p-4">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h2 class="mb-2" style="color: #2E8B57; font-weight: 600;">My Learning Overview</h2>
                    <p class="text-muted mb-0">Your progress at a glance</p>
                </div>
                <div class="d-flex align-items-center">
                    <div class="avatar-circle me-3" style="background-color: #E8F5E9; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                        <i class="fas fa-user-graduate" style="font-size: 24px; color: #2E8B57;"></i>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="p-3 text-center stat-card" style="background-color: #E8F5E9; border-radius: 10px;">
                        <div class="stat-number" style="font-size: 28px; font-weight: 700; color: #2E8B57;">@QuizzesCompleted</div>
                        <div class="stat-label" style="font-size: 14px; color: #616161;">Quiz Attempts</div>
                        <div class="progress mt-2" style="height: 6px;">
                            <div class="progress-bar" role="progressbar" style="width: 85%; background-color: #2E8B57;"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="p-3 text-center stat-card" style="background-color: #E8F5E9; border-radius: 10px;">
                        <div class="stat-number" style="font-size: 28px; font-weight: 700; color: #2E8B57;">@TotalQuizzes </div>
                        <div class="stat-label" style="font-size: 14px; color: #616161;">Total Quizzes Available</div>
                        <div class="progress mt-2" style="height: 6px;">
                            <div class="progress-bar" role="progressbar" style="width: 65%; background-color: #2E8B57;"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-3 text-center stat-card" style="background-color: #E8F5E9; border-radius: 10px;">
                        <div class="stat-number" style="font-size: 28px; font-weight: 700; color: #2E8B57;">@QuizzesAttempted / @TotalQuizzes</div>
                        <div class="stat-label" style="font-size: 14px; color: #616161;">Total Quizzes Attempted</div>
                        <div class="progress mt-2" style="height: 6px;">
                            <div class="progress-bar" role="progressbar" style="width: 92%; background-color: #2E8B57;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

