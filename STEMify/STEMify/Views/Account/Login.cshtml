@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - STEMify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            display: flex;
            height: 100vh;
        }

        .login-left {
            flex: 1;
            background: linear-gradient(to right, #0f9d58, #34a853);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            text-align: center;
        }

            .login-left blockquote {
                font-size: 1.2rem;
                font-style: italic;
                line-height: 1.6;
            }

        .login-right {
            flex: 1;
            background: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-form {
            max-width: 400px;
            width: 100%;
        }

        .form-control::placeholder {
            color: #bbb;
        }

        .btn-success {
            background-color: #34a853;
            border-color: #34a853;
        }

        .btn-outline-secondary {
            background-color: white;
            box-shadow: 0 0.1rem 0.5rem rgba(0,0,0,0.1);
        }

        .form-check-label {
            margin-left: 0.3rem;
        }

        .quote-icon {
            font-size: 2rem;
            display: block;
            margin-bottom: 1rem;
        }

        .forgot-password {
            font-size: 0.9rem;
            color: #34a853;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Section -->
        <div class="login-left">
            <div>
                <span class="quote-icon">“</span>
                <blockquote>
                    Those people who develop the ability to continuously acquire new and better forms of knowledge that they can apply to their work and to their lives will be the movers and shakers in our society for the indefinite future.
                </blockquote>
                <p class="mt-3">— John Doe</p>
            </div>
        </div>

        <!-- Right Section -->
        <div class="login-right">
            <div class="login-form">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-success">STEMify</h2>
                </div>

                <h5 class="fw-bold text-dark mb-1">Login to your Account</h5>
                <p class="text-muted mb-4" style="font-size: 0.9rem;">
                    with your registered Email Address
                </p>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <input asp-for="Email" class="form-control shadow-sm" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Password" class="form-control shadow-sm" placeholder="Password" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Remember my password
                        </label>
                    </div>

                    <div class="d-grid mb-2">
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>

                    <div class="text-center my-2 text-muted">or</div>

                    <div class="d-grid mb-3">
                        @Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn btn-outline-secondary" })

                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
